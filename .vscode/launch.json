{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "test_h264_encoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_encoder",
            "args": [
                "-codec",
                "h264",
                "-height",
                "480",
                "-width",
                "720",
                "-gop",
                "30",
                "-o",
                "./720x480.h264"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "test_h264_decoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_decoder",
            "args": [
                "-codec",
                "h264",
                "-i",
                "./1.h264",
                "-display",
                "true",
                "-fps",
                "30"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}